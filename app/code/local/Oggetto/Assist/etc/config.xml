<config>
    <global>
        <models>
            <assist>
                <class>Oggetto_Assist_Model</class>
            </assist>
        </models>
        <blocks>
            <assist>
                <class>Oggetto_Assist_Block</class>
            </assist>
        </blocks>
        <resources>
            <assist_setup>
                <setup>
                    <module>Oggetto_Assist</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </assist_setup>
            <assist_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </assist_write>
            <assist_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </assist_read>
        </resources>
        <helpers>
            <assist>
                <class>Oggetto_Assist_Helper</class>
            </assist>
        </helpers>
        <events>
            <sales_order_payment_cancel>
                <observers>
                    <cancel_assist_order>
                        <class>assist/observer</class>
                        <method>cancelAssistOrder</method>
                    </cancel_assist_order>
                </observers>
            </sales_order_payment_cancel>
        </events>
    </global>

    <frontend>
        <secure_url>
            <assist_redirect>/assist/redirect/</assist_redirect>
        </secure_url>
        <routers>
            <assist>
                <use>standard</use>
                <args>
                    <module>Oggetto_Assist</module>
                    <frontName>assist</frontName>
                </args>
            </assist>
        </routers>
        <translate>
            <modules>
                <Oggetto_Assist>
                    <files>
                        <default>Oggetto_Assist.csv</default>
                    </files>
                </Oggetto_Assist>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Oggetto_Assist>
                    <files>
                        <default>Oggetto_Assist.csv</default>
                    </files>
                </Oggetto_Assist>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <payment>
            <assist>
                <active>1</active>
                <model>assist/payment</model>
                <title>Assist</title>
                <developer_mode>1</developer_mode>
                <assist_debug_result>AS000</assist_debug_result>
                <assist_currency_code>RUB</assist_currency_code>
                <assist_language>ru</assist_language>
                <assist_payment_methods>CardPayment,WebMoneyPayment,PayCashPayment,QiwiBeelinePayment,AssistIDCCPayment,YandexMoneyPayment</assist_payment_methods>
                <order_status>pending</order_status>
            </assist>
        </payment>
    </default>
</config>
